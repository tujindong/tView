    border: none;
}
.theme-container .demo-block .demo-content {
    background: #e4ebf5;
}
.theme-container .page .demo-block .meta {
    background: rgba(255, 255, 255, 0.28);
    border: none;
}
.theme-container .page .demo-block .meta .description{
    background: transparent;
    border-color: #cad5e1;
}
.theme-container .page .demo-block .meta .code-content, 
.theme-container .page .demo-block .meta .code-content .language-html{
    background: transparent;
}
.theme-container .page .language-bash, 
