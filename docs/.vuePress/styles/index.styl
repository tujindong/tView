    font-size: 13px;
}
.theme-container .home .hero img {
    width: 140px;
}
.theme-container .home .hero h1 {
    font-size: 2.4rem;
}
.theme-container .home .hero .description{
    font-size: 1.3rem;
}
.theme-container .home .hero .action-button{
    padding: 0.4rem 1.0rem;
    font-size: 1.0rem;
